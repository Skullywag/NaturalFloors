<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef Name="BuildingBase" Abstract="True">
    <category>Building</category>
    <soundImpactDefault>BulletImpactMetal</soundImpactDefault>
    <selectable>true</selectable>
    <drawerType>MapMeshAndRealTime</drawerType>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <repairEffect>Repair</repairEffect>
    <leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
    <filthLeaving>BuildingRubble</filthLeaving>
  </ThingDef>

  <ThingDef ParentName="BuildingBase">
    <defName>CompostBin</defName>
    <label>compost bin</label>
    <thingClass>NaturalFloors.Building_Composter</thingClass>
    <description>Helps speed up the composting process.</description>
    <graphicData>
      <texPath>Things/Buildings/CompostBin</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
    </stuffCategories>
    <costStuffCount>100</costStuffCount>
    <altitudeLayer>Building</altitudeLayer>
    <fillPercent>0.5</fillPercent>
    <useHitPoints>True</useHitPoints>
    <statBases>
      <WorkToMake>2500</WorkToMake>
      <MaxHitPoints>180</MaxHitPoints>
      <Flammability>1.0</Flammability>
    </statBases>
    <size>(1,1)</size>
    <designationCategory>Production</designationCategory>
    <passability>PassThroughOnly</passability>
    <pathCost>70</pathCost>
    <building>
      <fixedStorageSettings>
        <priority>Important</priority>
        <filter>
          <categories>
            <li>Corpses</li>
          </categories>
          <specialFiltersToAllow> 
            <li>AllowRotten</li>
          </specialFiltersToAllow> 
        </filter>
      </fixedStorageSettings>
    </building>
    <inspectorTabs>
      <li>ITab_Storage</li>
    </inspectorTabs>
    <surfaceType>Item</surfaceType>
    <tickerType>Rare</tickerType>
  </ThingDef>

</Defs>