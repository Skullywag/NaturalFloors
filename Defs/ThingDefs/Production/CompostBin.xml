<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>

  <ThingDef Name="BuildingBase" Abstract="True">
    <category>Building</category>
    <soundImpactDefault>BulletImpactMetal</soundImpactDefault>
    <selectable>true</selectable>
    <drawerType>MapMeshAndRealTime</drawerType>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <repairEffect>Repair</repairEffect>
    <leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
    <filthLeaving>BuildingRubble</filthLeaving>
  </ThingDef>

  <ThingDef ParentName="BuildingBase">
    <DefName>CompostBin</DefName>
    <label>compost bin</label>
    <ThingClass>NaturalFloors.Building_Composter</ThingClass>
    <Description>Helps speed up the composting process.</Description>
    <graphicData>
      <texPath>Things/Buildings/CompostBin</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
    </stuffCategories>
    <costStuffCount>100</costStuffCount>
    <AltitudeLayer>Building</AltitudeLayer>
    <fillPercent>0.5</fillPercent>
    <useHitPoints>True</useHitPoints>
    <statBases>
      <WorkToMake>2500</WorkToMake>
      <MaxHitPoints>180</MaxHitPoints>
      <Flammability>1.0</Flammability>
    </statBases>
    <Size>(1,1)</Size>
    <DesignationCategory>Production</DesignationCategory>
    <Passability>PassThroughOnly</Passability>
    <pathCost>70</pathCost>
    <building>
      <fixedStorageSettings>
        <priority>Important</priority>
        <filter>
          <categories>
            <li>FoodRaw</li>
            <li>Corpses</li>
          </categories>
          <specialFiltersToAllow> 
            <li>AllowRotten</li>
          </specialFiltersToAllow> 
        </filter>
      </fixedStorageSettings>
    </building>
    <inspectorTabs>
      <li>ITab_Storage</li>
    </inspectorTabs>
    <surfaceType>Item</surfaceType>
    <tickerType>Rare</tickerType>
  </ThingDef>

</ThingDefs>